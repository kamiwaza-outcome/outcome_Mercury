# Kamiwaza Configuration (for local model deployment)
KAMIWAZA_ENDPOINT=http://host.docker.internal:7777/api/
KAMIWAZA_VERIFY_SSL=false
KAMIWAZA_DEFAULT_MODEL=llama3
KAMIWAZA_FALLBACK_MODEL=mistral
KAMIWAZA_STREAMING=false
KAMIWAZA_MAX_RETRIES=3
KAMIWAZA_RETRY_DELAY=5

# Kamiwaza Vector Service Configuration
KAMIWAZA_DEFAULT_COLLECTION=kamiwaza_knowledge_v2
KAMIWAZA_EMBEDDING_MODEL=
KAMIWAZA_MILVUS_HOST=localhost
KAMIWAZA_MILVUS_PORT=19530

# Legacy OpenAI Compatibility (no longer needed with Kamiwaza)
# OPENAI_API_KEY=your_api_key_here (deprecated - using Kamiwaza instead)
# OPENAI_MODEL=gpt-5 (deprecated - maps to KAMIWAZA_DEFAULT_MODEL)
# OPENAI_FALLBACK_MODEL=gpt-5-mini (deprecated - maps to KAMIWAZA_FALLBACK_MODEL)

# Google Services Configuration
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json
OUTPUT_FOLDER_ID=your_google_drive_output_folder_id
TEMPLATE_FOLDER_ID=your_google_drive_template_folder_id
TRACKING_SHEET_ID=your_google_sheets_tracking_id

# SAM.gov API Configuration
SAM_API_KEY=your_sam_api_key

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Processing Options
# Set to "true" to skip the document revision phase (faster processing)
SKIP_REVISION_PHASE=false

# Retry Configuration (optional)
MAX_RETRY_ATTEMPTS=5
RETRY_MIN_WAIT=4
RETRY_MAX_WAIT=60

# Heartbeat Configuration (optional)
HEARTBEAT_INTERVAL=30

# Checkpoint Directory (optional)
CHECKPOINT_DIR=checkpoints