# Docker Environment Configuration
# Copy this file to .env and update with your values

# === Kamiwaza Configuration ===
# If Kamiwaza is running on host machine, use host.docker.internal
# If using the Kamiwaza container, use kamiwaza:7777
KAMIWAZA_ENDPOINT=http://host.docker.internal:7777/api/
KAMIWAZA_VERIFY_SSL=false
KAMIWAZA_DEFAULT_MODEL=llama3
KAMIWAZA_FALLBACK_MODEL=mistral
KAMIWAZA_STREAMING=false
KAMIWAZA_MAX_RETRIES=3
KAMIWAZA_RETRY_DELAY=5

# === Vector Service Configuration ===
KAMIWAZA_DEFAULT_COLLECTION=kamiwaza_knowledge_v2
KAMIWAZA_EMBEDDING_MODEL=Qwen3-Embedding-0.6B-GGUF
KAMIWAZA_MILVUS_HOST=milvus
KAMIWAZA_MILVUS_PORT=19530

# === Milvus Configuration ===
MILVUS_HOST=milvus
MILVUS_PORT=19530

# === Optional: Google Services ===
# Uncomment and fill if using Google Drive/Sheets integration
# GOOGLE_SERVICE_ACCOUNT_FILE=/app/credentials/service-account.json
# OUTPUT_FOLDER_ID=your_google_drive_output_folder_id
# TEMPLATE_FOLDER_ID=your_google_drive_template_folder_id
# TRACKING_SHEET_ID=your_google_sheets_tracking_id

# === Optional: SAM.gov API ===
# Uncomment and fill if using SAM.gov integration
# SAM_API_KEY=your_sam_api_key

# === Docker-specific Settings ===
KAMIWAZA_ENV=production
NODE_ENV=production